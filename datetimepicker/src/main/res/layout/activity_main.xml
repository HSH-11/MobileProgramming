<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/select_date_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:text="날짜 선택"
        app:layout_constraintBaseline_toBaselineOf="@+id/selected_date_text"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/selected_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="25dp"
        android:text="선택된 날짜: "
        app:layout_constraintStart_toEndOf="@+id/select_date_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/selected_time_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:text="시간 선택"
        app:layout_constraintBaseline_toBaselineOf="@+id/selected_time_text"
        app:layout_constraintStart_toStartOf="parent"></Button>

    <EditText
        android:id="@+id/selected_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="선택된 시간: "
        app:layout_constraintStart_toStartOf="@+id/selected_date_text"
        app:layout_constraintTop_toBottomOf="@+id/selected_date_text" />

</androidx.constraintlayout.widget.ConstraintLayout>


